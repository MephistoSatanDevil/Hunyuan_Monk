
IF
	Class(Player%n%,MONK)
	TriggerOverride(Player%n%,Global("c4MonkCheck","Locals",1))
	TriggerOverride(Player%n%,Global("c4MonkMentalTraining%x%","Locals",1))
THEN
	RESPONSE #100
		ActionOverride(Player%n%,SetGlobal("c4MonkMentalTraining%x%","Locals",2))
		ActionOverride(Player%n%,ReallyForceSpellRES("c4mkmt%x%a",Player%n%))
		Continue()
END

